algoritmo "ValoresPares"
// Função :
// Autor :
// Data : 27/02/2019
// Seção de Declarações 
var
     val: vetor[1..7] de inteiro
     i, TotPar: inteiro
inicio
      TotPar <- 0
      Para i <- 1 ate 7 faca
           Escreva("Digite o ", i, "º valor: ")
           leia(val[i])
      FimPara
      Escreval("O total de pares  foi ", TotPar)
      Para i <- 1 ate 7 faca
           Se (val[i]%2 = 0) entao
              TotPar <- TotPar + 1
              Escreval("Valor PAR na posição ", i)
           FimSe
      FimPara


fimalgoritmo
